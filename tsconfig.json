{
  "compilerOptions": {
    "outDir": "./lib", // 编译后生成的文件目录
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "baseUrl": ".",
    "types": ["webpack-env"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
, "src/powerfulTable/index.js", "src/indexData.ks", "src/main.js"  ],
  "exclude": ["node_modules", "src/main.js", "src/powerfulTable/index.js"]
}
